// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            String    @id // Clerk user ID
  email         String    @unique
  firstName     String?
  lastName      String?
  imageUrl      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Optional fields from Clerk
  username      String?   @unique
  externalId    String?   @unique  // External ID if using OAuth
  publicMetadata Json?    // Public metadata from Clerk
  privateMetadata Json?   // Private metadata from Clerk
}

